<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:padding="12dp"
        android:elevation="4dp">

        <!-- Title -->
        <TextView
            android:id="@+id/navigationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Graph Viewer"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Dropdown Menu -->
    <Spinner
        android:id="@+id/stockSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigationBar"
        android:layout_margin="16dp"
        android:spinnerMode="dropdown" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stockSpinner"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/graph1ImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="Graph 1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/graph2ImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="Graph 2"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/graph3ImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="Graph 3"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/graph4ImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="Graph 4"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white" />
            <ImageView
                android:id="@+id/graph5ImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="Graph 5"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
